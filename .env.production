# Production Environment Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: Admin password for authentication AND JWT secret
# WARNING: Changing this will invalidate all existing JWT sessions
ADMIN_PASSWORD=your_secure_password_here

# REQUIRED: Your domain name for HTTPS (used by Caddy for SSL certificates)
# Examples: yourdomain.com, recipes.example.com, hbk.example.com
# Leave as 'localhost' for local testing without HTTPS
DOMAIN=yourdomain.com

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DB_PATH=./data/database.sqlite

# Logging Configuration
LOG_LEVEL=warn

# Security Configuration
# CORS_ORIGIN should match your DOMAIN with https:// prefix
CORS_ORIGIN=https://yourdomain.com
ADMIN_RATE_LIMIT=5
PUBLIC_RATE_LIMIT=100
